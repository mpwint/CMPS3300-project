<h2>Post Title</h2>

<div class = "center">
  <%= link_to '< Back', posts_path %>
  <%= link_to 'Edit', edit_post_path(@post), :class => "btn btn-sm btn-primary btn-blue" %>
  <%= link_to 'Destroy', @post, method: :delete, data: { confirm: 'Are you sure you want to delete this post?' }, :class => "btn btn-sm btn-primary btn-red" %>
</div>
<br>

<div class = "center">
  <p>
    <strong>Poster email:</strong>
    <a href= "mailto:<%= @post.poster_email %>"> <%= @post.poster_email %></a>
  </p>
</div>

<div class = "field col-xs-12 col-sm-6 col-sm-offset-3">
  <p>
    <div class="card" style="width: 40rem;">
      <div class="card-body">
        <h5 class="card-title">Post title</h5>
        <h6 class="card-subtitle mb-2 text-muted"> <%= @post.updated_at %> </h6>
        <p class="card-text"> <%= @post.description %></p>
        <%= commontator_thread(@post) %>
      </div>
    </div>
    <br>
  </p>
</div>
