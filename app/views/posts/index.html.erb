<!DOCTYPE html>
<html lang="en">
<head>
  <title>Posts</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/js/bootstrap.min.js"></script>
  <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet">
  <style type="text/css">
    body {
        background-color:rgb(255, 229, 180);
        zoom: 90%;
    }

    .h7 {
        font-size: 0.8rem;
    }
    .h5 {
        margin-bottom: .3%;
    }

    .gedf-wrapper {
        margin-top: 0.97rem;
    }

    @media (min-width: 992px) {
        .main {
            padding-left: .1rem;
            padding-right: 4rem;
            margin-bottom: 1rem;
        }
        .badge{
            margin-right: .5%;
        }
        .card {
            margin-top: 1%;
        }
        .card-header{
            padding: .5%;
        }
        .card-footer{
            padding: .5%;
        }
        .card-body{
            padding: 1%;
        }
        .card-text{
            font-size: 1.05rem;
        }
        li.ui-state-default{
            background:#fff0;
            border:none;
            border-bottom:1px solid #ddd;
            text-align: left;
            padding-bottom: 10px;
            padding-top: 10px;
        }
        li.ui-state-default:last-child{
            border-bottom:none;
        }
    }

    /**Reset Bootstrap*/
    .dropdown-toggle::after {
        content: none;
        display: none;
    }
  </style>
</head>
<body>
<div class="h1 ml-5">Posts</div>
<div class="col-md-10 gedf-main">
  <div class="card gedf-card" id="input">
    <div style="background-color: rgb(56, 126, 230)">
        <ul class="nav nav-tabs" id="myTab" role="tablist">
            <li class="nav-item" style="margin-top: .75%; margin-left: 1.25%">
                <a class="nav-link active" id="posts-tab" data-toggle="tab" href="#posts" role="tab" aria-controls="posts" aria-selected="true">
                    Post Opportunity
                </a>
            </li>
        </ul>
    </div>
    <div class="card-body">
        <div class="tab-content" id="myTabContent">
            <div class="row">
                <div class="col">
                    <div class="form-group" id="subject">
                        <label>Subject:</label>
                        <input type="text" id="subjectInput" class="form-control">
                    </div>
                </div>
                <div class="col">
                    <div class="form-group" id="firstName">
                        <label>First Name:</label>
                        <input type="text" id="firstNameInput" class="form-control">
                    </div>
                </div>
                <div class="col">
                    <div class="form-group" id="lastName">
                        <label>Last Name:</label>
                        <input type="text" id="lastNameInput" class="form-control">
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label>Request Type:</label>
                <select class="form-control" type="text" id="typeSelect" onchange="Select()">
                    <option>(Select a request type)</option>
                    <option>Looking for help</option>
                    <option>Looking to help</option>
                </select>
            </div>
            <div class="form-group" style="margin-bottom: 0">
                <div class="row">
                    <div class="col" id="companyNameContainer" style="display:none">
                        <label>Company Name:</label>
                        <input type="text" id="companyNameInput" class="form-control">
                    </div>
                    <div class="col" id="majorContainer" style="display:none">
                        <label>Major:</label>
                        <input type="text" id="majorInput" class="form-control">
                    </div>
                    <div class="col" id="tagsContainer" style="display:none">
                        <label>Tags:</label>
                        <div class="input-group mb-3">
                            <input type="text" id="tagsInput" class="form-control">
                            <button class="btn btn-outline-secondary" type="button" onclick="AddTag()">Add Tag</button>
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-group" id="description">
                <label>Description:</label>
                <textarea class="form-control" id="descriptionInput" rows="3" placeholder="Describe what you are looking for"></textarea>
            </div>
            <div class="form-group" id="website">
                <label>Website or Linkedin link:</label>
                <input type="text" id="linkInput" class="form-control">
            </div>
            <div id="tags">
  
            </div>
            <p></p>
  
        </div>
        <button type="submit" class="btn btn-primary" onclick="PostData()">Post</button>
    </div>
    <div id="errorMessage" style="display:none"></div>
  </div>
  <% @posts.each do |post| %>
    <div class="card gedf-card">
      <div class="card-header">
        <div class="h5 m-0">Header</div>
        <div class="h7 text-muted"><%= post.updated_at %></div>
      </div>
      <div class="card-body">
        <div class="h5 m-0">Name: <%= link_to post.poster_email, post.user %></div>
        <div class="h6">Major: undefined</div>
        <p class="card-text">Description: <%= link_to post.description, post %></p>
      </div>
  
    </div>
  <% end %>
</div>
<!--Scroll to top button-->

<html>
<head>
<meta name="viewport" content="width=device-width, initial-scale=1">
<style>
body {
  font-family: Arial, Helvetica, sans-serif;
  font-size: 20px;
}

#myBtn {
  display: none;
  position: fixed;
  bottom: 20px;
  right: 30px;
  z-index: 99;
  font-size: 18px;
  border: none;
  outline: none;
  background-color: red;
  color: white;
  cursor: pointer;
  padding: 15px;
  border-radius: 4px;
}

#myBtn:hover {
  background-color: #555;
}
</style>
</head>
<body>

<button onclick="topFunction()" id="myBtn" title="Go to top">Top</button>

<script>
//Get the button
var mybutton = document.getElementById("myBtn");

// When the user scrolls down 20px from the top of the document, show the button
window.onscroll = function() {scrollFunction()};

function scrollFunction() {
  if (document.body.scrollTop > 20 || document.documentElement.scrollTop > 20) {
    mybutton.style.display = "block";
  } else {
    mybutton.style.display = "none";
  }
}

// When the user clicks on the button, scroll to the top of the document
function topFunction() {
  document.body.scrollTop = 0;
  document.documentElement.scrollTop = 0;
}
</script>

</body>
</html>

